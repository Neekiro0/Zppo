<Page x:Class="Notatnik.TXTFiles"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Notatnik"
      Background="#1E1E1E"
      Foreground="#ECEFF1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Top" Grid.ColumnSpan="2">
            <Rectangle HorizontalAlignment="Stretch" Fill="#263238" Height="34" />
            <Rectangle Fill="#ECEFF1" HorizontalAlignment="Stretch" Height="1"/>
        </StackPanel>

        <Grid Grid.Column="0" Margin="10,10,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical" Grid.Row="0">
                <Label Content="Dostępne notatki:" Background="#263238" Foreground="#ECEFF1" Height="23" Width="188" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <ComboBox x:Name="TagFilterComboBox" Width="111" SelectionChanged="TagFilterComboBox_SelectionChanged"
                              IsEditable="True" StaysOpenOnEdit="True" Text="Filtruj po tagu..." Height="23"
                              Background="#2C2C2C" Foreground="#2C2C2C"/>
                    <Button Content="Reset" Click="PokazWszystkiePlikiMenuItem_Click"
                            Margin="5,0,5,0" Width="74" Background="#00ACC1" Foreground="White"/>
                </StackPanel>
            </StackPanel>

            <ListBox Grid.Row="1" x:Name="ListaTXT" Margin="0,2,0,5"
                     VerticalAlignment="Stretch" SelectionMode="Extended"
                     Background="#2C2C2C" Foreground="#ECEFF1" SelectionChanged="ListaTXT_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding FileName}"/>
                            <ItemsControl ItemsSource="{Binding Tags}" Margin="5,0,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#00ACC1" CornerRadius="3" Margin="1" Padding="2,0,2,0">
                                            <TextBlock Text="{Binding}" FontSize="10" Foreground="White"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Vertical">
                <Button x:Name="Odswiezbt" Content="Odśwież" Click="Odswiezbt_Click" Margin="3" Background="#263238" Foreground="#ECEFF1"/>
                <Button x:Name="Zmienfolderbt" Content="Zmień folder" Click="Zmienfolderbt_Click" Margin="3" Background="#263238" Foreground="#ECEFF1"/>
                <Button x:Name="Nowybt" Content="Utwórz plik" Click="Nowybt_Click" Margin="3" Background="#263238" Foreground="#ECEFF1"/>
                <Button x:Name="Usunbt" Content="Usuń zaznaczone" Click="Usunbt_Click" FontWeight="Bold" Margin="3"
                        Background="#B71C1C" Foreground="White"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Margin="5,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Zawartość notatki:" HorizontalAlignment="Stretch" Background="#263238" Foreground="#ECEFF1" Height="23" Margin="0,0,0,5"/>

            <TextBox x:Name="ContentTextBox" Grid.Row="1"
                     TextWrapping="NoWrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     TextChanged="ContentTextBox_TextChanged"
                     Background="#2C2C2C" Foreground="#ECEFF1"/>

            <StatusBar Grid.Row="2" VerticalAlignment="Bottom" Background="#263238">
                <StatusBarItem>
                    <TextBlock x:Name="StatusText" Text="Gotowe" Foreground="#ECEFF1"/>
                </StatusBarItem>
                <StatusBarItem BorderBrush="Black">
                    <TextBlock x:Name="EditStatusText" Text="" Foreground="Red" FontWeight="Bold" Width="500"/>
                </StatusBarItem>
            </StatusBar>

            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,5,0,0">
                <Button x:Name="Otagujbt" Content="Edytuj tagi" Margin="3" Width="71" Background="#263238" Foreground="#ECEFF1" Click="Otagujbt_Click"/>
                <Button x:Name="Zapiszbt" Content="Zapisz zmiany" Margin="3" Background="#00ACC1" Foreground="White" Click="Zapiszbt_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
