<Window x:Class="Notatnik.TaskDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Szczegóły Zadania" 
        Height="550" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        Foreground="#ECEFF1">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Tytuł*:" Foreground="#ECEFF1"/>
        <TextBox Grid.Row="0" Grid.Column="1" Name="TytulTextBox" Margin="5" Background="#2C2C2C" Foreground="#ECEFF1"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Data*:" Foreground="#ECEFF1"/>
        <DatePicker Grid.Row="1" Grid.Column="1" Name="DataDatePicker" Margin="5" Background="#2C2C2C" Foreground="#1E1E1E"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Czas*:" Foreground="#ECEFF1"/>
        <TextBox Grid.Row="2" Grid.Column="1" Name="TimeTextBox" Margin="5" Text="00:00" 
                 Background="#2C2C2C" Foreground="#ECEFF1" TextChanged="TimeTextBox_TextChanged"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Kategoria:" Foreground="#ECEFF1"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Name="KategoriaComboBox" Margin="5" 
                  Background="#2C2C2C" Foreground="#1E1E1E" SelectedIndex="0"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Priorytet:" Foreground="#ECEFF1"/>
        <ComboBox Grid.Row="4" Grid.Column="1" Name="PriorytetComboBox" Margin="5" 
                  Background="#2C2C2C" Foreground="#1E1E1E" SelectedIndex="2"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Czas trwania (godziny)*:" Foreground="#ECEFF1"/>
        <TextBox Grid.Row="5" Grid.Column="1" Name="CzasTrwaniaTextBox" Margin="5" Text="1.0"
                 Background="#2C2C2C" Foreground="#ECEFF1" PreviewTextInput="CzasTrwaniaTextBox_PreviewTextInput"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Opis:" Foreground="#ECEFF1"/>
        <TextBox Grid.Row="6" Grid.Column="1" Name="OpisTextBox" Margin="5" Height="80" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                 Background="#2C2C2C" Foreground="#ECEFF1"/>

        <Label Grid.Row="7" Grid.Column="0" Content="Nastrój:" Foreground="#ECEFF1"/>
        <ComboBox Grid.Row="7" Grid.Column="1" Name="PoczucieComboBox" Margin="5" IsEditable="True"
                  Background="#2C2C2C" Foreground="#1E1E1E"/>

        <Label Grid.Row="8" Grid.Column="0" Content="Status:" Foreground="#ECEFF1"/>
        <CheckBox Grid.Row="8" Grid.Column="1" Name="ZrealizowaneCheckBox" Margin="5" 
                  Content="Zrealizowane" Foreground="#ECEFF1"/>

        <TextBlock Grid.Row="9" Grid.ColumnSpan="2" Text="* - pola wymagane" 
                   Foreground="#78909C" FontStyle="Italic" Margin="0,10,0,0"/>

        <StackPanel Grid.Row="11" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Zapisz" Click="SaveButton_Click" Margin="5" Padding="15,5" 
                    Background="#00ACC1" Foreground="#FFFFFF" FontWeight="Bold"/>
            <Button Content="Anuluj" Click="CancelButton_Click" Margin="5" Padding="15,5"
                    Background="#546E7A" Foreground="#FFFFFF"/>
        </StackPanel>
    </Grid>
</Window>