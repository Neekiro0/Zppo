<Page x:Class="Notatnik.Planer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Planer"
      Background="#1E1E1E"
      Foreground="#ECEFF1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Calendar Name="MainCalendar" 
                  SelectionMode="SingleDate" 
                  SelectedDatesChanged="MainCalendar_SelectedDatesChanged" 
                  Grid.Column="0" 
                  Margin="10"
                  Background="#ECEFF1" 
                  Foreground="#ECEFF1"/>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Name="SelectedDateTextBlock" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10" 
                       Text="Zadania na dzień:"
                       Foreground="#FF80CBC4"/>
            
            <ListView Name="TasksListView" Height="200" SelectionChanged="TasksListView_SelectionChanged"
                      Background="#2C2C2C" Foreground="#ECEFF1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Status" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding CzyZrealizowane}" Foreground="#ECEFF1"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Tytuł" DisplayMemberBinding="{Binding Tytul}" Width="200"/>
                        <GridViewColumn Header="Kategoria" DisplayMemberBinding="{Binding Kategoria}" Width="100"/>
                        <GridViewColumn Header="Priorytet" DisplayMemberBinding="{Binding PriorytetText}" Width="80"/>
                        <GridViewColumn Header="Data" DisplayMemberBinding="{Binding FormatowanaData}" Width="100"/>
                        <GridViewColumn Header="Czas" DisplayMemberBinding="{Binding CzasTrwania}" Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding CzasTrwania, StringFormat=hh\\:mm}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Dodaj Zadanie" Click="AddButton_Click" Margin="0,0,10,0" 
                        Background="#263238" Foreground="#ECEFF1" Padding="5" Width="100"/>
                <Button Content="Edytuj Zadanie" Click="EditButton_Click" Margin="0,0,10,0"
                        Background="#263238" Foreground="#ECEFF1" Padding="5" Width="100"/>
                <Button Content="Usuń Zadanie" Click="DeleteButton_Click" Margin="0,0,10,0"
                        Background="#263238" Foreground="#ECEFF1" Padding="5" Width="100"/>
                <Button Content="Zapisz do TXT" Click="SaveToTxtButton_Click" Margin="0,0,10,0"
                        Background="#00ACC1" Foreground="#FFFFFF" Padding="5" Width="100"/>
                <Button Content="Zapisz do PDF" Click="SaveToPdfButton_Click"
                        Background="#00ACC1" Foreground="#FFFFFF" Padding="5" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>