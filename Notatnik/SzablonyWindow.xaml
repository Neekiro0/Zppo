<Window x:Class="Notatnik.SzablonyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Zarządzanie Szablonami" Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E" Foreground="#ECEFF1">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView x:Name="SzablonyListView" Grid.Row="0" Background="#2C2C2C" Foreground="#ECEFF1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Nazwa" DisplayMemberBinding="{Binding NazwaSzablonu}" Width="150"/>
                    <GridViewColumn Header="Tytuł" DisplayMemberBinding="{Binding Tytul}" Width="150"/>
                    <GridViewColumn Header="Kategoria" DisplayMemberBinding="{Binding Kategoria}" Width="100"/>
                    <GridViewColumn Header="Priorytet" DisplayMemberBinding="{Binding Priorytet}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Dodaj szablon" Click="DodajSzablonButton_Click" Margin="5" Padding="10,5"
                    Background="#00ACC1" Foreground="#FFFFFF"/>
            <Button Content="Edytuj szablon" Click="EdytujSzablonButton_Click" Margin="5" Padding="10,5"
                    Background="#00ACC1" Foreground="#FFFFFF"/>
            <Button Content="Usuń szablon" Click="UsunSzablonButton_Click" Margin="5" Padding="10,5"
                    Background="#FF5252" Foreground="#FFFFFF"/>
            <Button Content="Zamknij" Click="ZamknijButton_Click" Margin="5" Padding="10,5"
                    Background="#546E7A" Foreground="#FFFFFF"/>
        </StackPanel>
    </Grid>
</Window>